<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/favicon.ico">

    <title><%= title %></title>

    <!-- Bootstrap core CSS -->
    <link href="/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link href="/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/datatables/css/jquery.dataTables.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/stylesheets/style.css" rel="stylesheet">
  </head>

  <body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="/"><i class="fas fa-cloud"></i> My Cloud</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/"><i class="fas fa-home"></i> <span class="sr-only">(current)</span></a>
          </li>
        </ul>

        <form class="upload_file form-inline mt-2 mt-md-0 d-none d-md-block" action="/api/upload" enctype="multipart/form-data" method="post">
          <input class="upload_file_input" type="file" name="upload" multiple style="display: none">
          <button class="upload_file_button btn btn-success my-2 my-sm-0" type="button">Upload Files Here <i class="fas fa-download"></i></button>
        </form>

        <form class="form-inline mt-2 mt-md-0 ml-1 d-none d-md-block">
          <button class="btn btn-primary my-2 my-sm-0" type="button" data-toggle="modal" data-target="#create_folder_modal">Create Folder Here <i class="fas fa-plus"></i></button>
        </form>
          <!--
        <form class="form-inline mt-2 mt-md-0" action="/api/upload?path=" enctype="multipart/form-data">
          <input class="form-control mr-sm-2" type="text" placeholder="Search for files" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
          -->
      </div>
    </nav>

    <div class="container-fluid">
        <div class="row mt-0 float-right">
          <form class="upload_file form-inline mt-0 d-block d-md-none" action="/api/upload" enctype="multipart/form-data" method="post">
            <input class="upload_file_input" type="file" name="upload" multiple style="display: none">
            <button class="upload_file_button btn btn-success btn-sm my-2 my-sm-0 p-1" type="button">Upload Files Here <i class="fas fa-download"></i></button>
          </form>
          <form class="form-inline mt-0 ml-1 d-block d-md-none">
            <button class="btn btn-primary btn-sm my-2 my-sm-0 p-1" type="button" data-toggle="modal" data-target="#create_folder_modal">Create Folder Here <i class="fas fa-plus"></i></button>
          </form>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row" style="width:100%">
          <h4 id="path" style="width:100%"></h4>
        </div>
          <table id="main_data_table" class="table table-striped table-bordered" style="width:100%">
              <thead>
                  <tr>
                      <th>Name</th>
                      <th>Size</th>
                      <th>Modification Date</th>
                  </tr>
              </thead>
              <tfoot>
                  <tr>
                      <th>Name</th>
                      <th>Size</th>
                      <th>Modification Date</th>
                  </tr>
              </tfoot>
          </table>
    </div>

    <ul class='custom-menu'>
      <li data-action="open">Open</li>
      <li data-action="download"><i class="fas fa-download"></i> Download</li>
      <li data-action="delete"><i class="fas fa-trash"></i> Delete</li>
      <li><hr style="margin: 0;padding: 0;"/></li>
      <li data-action="upload"><i class="fas fa-upload"></i> Upload</li>
    </ul>

    <div class="modal" id="create_folder_modal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="create_folder" action="/api/mkdir" method="post">
              <div class="modal-header">
                <h5 class="modal-title">Create a folder</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                    <input type="form-control" name="path" placeholder="Folder name" id="create_folder_path">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button class="btn btn-primary my-2 my-sm-0" type="submit">Create Folder Here <i class="fas fa-plus"></i></button>
              </div>
            </form>
        </div>
      </div>
    </div>

    <footer class="text-muted">
        <hr/>
        <div class="container">
            <p><i class="fas fa-cloud"></i> Private Cloud</p>
            <p>Open Source on <a href="https://github.com/lucgerrits/nodejs-file-manager" target="_blank"><i class="fab fa-github"></i>Github</a></p>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/assets/jquery/js/jquery-3.3.1.min.js"></script>
    <script src="/assets/popperjs/popper.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>

    <script src="/assets/fontawesome/js/all.js"></script>

    <script src="/assets/datatables/js/jquery.dataTables.min.js"></script>

    <script src="/js/main.js"></script>
  </body>
</html>
